@model LibraryManagementSystem.Models.Entity.categories
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Güncelle</h2>

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div style="margin-bottom:25px"></div>
    <div class="form-group">
        <label>ID</label>
        @Html.TextBoxFor(ctg => ctg.id, new { @class = "form-control "  })

        <br />

        <label>KATEGORİ ADI</label>
        @Html.TextBoxFor(ctg => ctg.name, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-warning">Guncelle</button>
    </div>
}
