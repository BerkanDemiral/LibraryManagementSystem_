@model LibraryManagementSystem.Models.Entity.members
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MemberPanel.cshtml";
}

@using (Html.BeginForm("Index2", "MemberPanel", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:30px">

        <tr>
            <td>
                <label style="font-weight:bolder"> EMail Adresi: </label> @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.first_name, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.last_name, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>   @Html.TextBoxFor(x => x.user_name, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>   @Html.TextBoxFor(x => x.password, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>   @Html.TextBoxFor(x => x.photos, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>   @Html.TextBoxFor(x => x.school, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Şifre Güncelle</button>
            </td>
        </tr>
    </table>
}
