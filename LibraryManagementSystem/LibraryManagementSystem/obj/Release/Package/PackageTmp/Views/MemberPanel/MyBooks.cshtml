@using LibraryManagementSystem.Models.Entity
@model List<events>
@{ ViewBag.Title = "MyBooks";
    Layout = "~/Views/Shared/MemberPanel.cshtml"; }

<!DOCTYPE html>
@{ var return_date = "";}
<html>

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Kitaplarım</title>

    <!-- Tell the browser to be responsive to screen width -->

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->

    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">

    <!-- Ionicons -->

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Theme style -->

    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">

        <section class="content-header">

            <div class="container-fluid">

                <div class="row mb-2">


                </div>

            </div><!-- /.container-fluid -->

        </section>

        <!-- Main content -->

        <section class="content">

            <div class="container-fluid">

                <!-- /.row -->

                <div class="row">

                    <div class="col-12">

                        <div class="card">

                            <div class="card-header">

                                <h3 class="card-title">Kitaplarım</h3>

                                <div class="card-tools">

                                    <div class="input-group input-group-sm" style="width: 150px;">

                                        <input type="text" name="table_search" class="form-control float-right" placeholder="Kitap Ara">

                                        <div class="input-group-append">

                                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>

                                        </div>

                                    </div>

                                </div>

                            </div>

                            <!-- /.card-header -->

                            <div class="card-body table-responsive p-0">

                                <table id="tbl1" class="table table-hover text-nowrap">

                                    <thead>

                                        <tr>

                                            <th>Kitap Adı</th>

                                            <th>Alış Tarihi</th>

                                            <th>Üye İade Durumu</th>

                                        </tr>

                                    </thead>

                                    <tbody>                                     
                                        @foreach (var item in Model)
                                        {
                                            if (item.member_return_date == null)
                                            {
                                                return_date = "İade Edilmedi";
                                            }
                                            else
                                            {
                                                return_date = @Convert.ToDateTime(item.member_return_date).ToString("dd/MM/yyyy");
                                            }

                                            <tr>

                                                <td>@item.books.name</td>

                                                <td>@Convert.ToDateTime(item.get_date).ToString("dd/MM/yyyy")</td>

                                                <td>@return_date</td>

                                            </tr>
                                        }
                                    </tbody>
                                       
                                </table>


                            </div>

                            <!-- /.card-body -->

                        </div>

                        <!-- /.card -->

                    </div>

                </div>

                <!-- /.row -->
                <!-- /.row -->

            </div><!-- /.container-fluid -->

        </section>

        <!-- /.content -->

    </div>

    <!-- /.content-wrapper -->
    <!-- ./wrapper -->
    <!-- jQuery -->

</body>

</html>

<script>$('#tbl1').DataTable(
        {
            //order: [
            //    [2, 'desc'] 2.indexteki sütunu büyükten küçüğe sıralı şekilde getirir.
            //]
            pageLength: 10,
            //lengthMenu: [
            //    [10, 25, 50, 100, -1],
            //    ['10 Adet', '25 Adet', '50 Adet', '100 Adet', 'Tümü']
            //],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.19/i18n/Turkish.json"
            }
        } );</script>