@using LibraryManagementSystem.Models.Entity
@model List<announcements>

@foreach (var item in Model)
{



    <div class="post">

        <div class="user-block">

            <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/avatar04.png" alt="user image">

            <span class="username">

                <a href="#">@item.category</a>

                <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>

            </span>

            <span class="description">@Convert.ToDateTime(item.date).ToString("dd/MM/yyyy")</span>

        </div>

        <!-- /.user-block -->

        <p>

            @item.content

        </p>

    </div>

}