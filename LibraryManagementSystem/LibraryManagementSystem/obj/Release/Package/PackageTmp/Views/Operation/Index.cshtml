@using LibraryManagementSystem.Models.Entity;
@model List<events>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>İadesi Alınan Kitap Listesi</h2>
<br />
<table id="tbl1" class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Kitap Adı</th>
            <th>Üye</th>
            <th>Personel</th>
            <th>Alış Tarihi</th>
            <th>Üyenin Teslim Tarihi</th>
            <th></th>

        </tr>
    </thead>


    <tbody>
        @foreach (var evnt in Model)
        {
            <tr>
                <td>@evnt.id</td>
                <td>@evnt.books.name</td>
                <td>@evnt.members.first_name @evnt.members.last_name</td>
                <td>@evnt.personnels.personnel</td>
                <td>@Convert.ToDateTime(evnt.get_date).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(evnt.member_return_date).ToString("dd/MM/yyyy")</td>

                <td><a href="/Loaned/ReturnBook/@evnt.id" class="btn btn-default" style="background-color:orange; color:white;">Detaylar</a></td>


            </tr>
        }
    </tbody>
</table>
<script>
    $('#tbl1').DataTable(
        {
            //order: [
            //    [2, 'desc'] 2.indexteki sütunu büyükten küçüğe sıralı şekilde getirir.
            //]
            pageLength: 10,
            //lengthMenu: [
            //    [10, 25, 50, 100, -1],
            //    ['10 Adet', '25 Adet', '50 Adet', '100 Adet', 'Tümü']
            //],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.19/i18n/Turkish.json"
            }
        } );

</script>