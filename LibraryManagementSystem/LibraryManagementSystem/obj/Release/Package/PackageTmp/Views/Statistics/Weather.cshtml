
@{
    ViewBag.Title = "Weather";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link href="~/webhava/css/style.css" rel="stylesheet" />
<script src="~/webhava/js/jquery-2.1.4.min.js"></script>
<script src="~/webhava/js/skycons.js"></script>

<h2>Hava Raporları</h2>

<!DOCTYPE html>
<html>
<head>
    <title>Flatty Weather Report Responsive Widget Template :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Flatty Weather Report template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,300,300italic,400italic,700,700italic' rel='stylesheet' type='text/css'>
    <!-- //web font -->
    <!-- js -->
    <script src="js/jquery-2.1.4.min.js"></script>
    <script src="js/skycons.js"></script> <!-- skycons-icons -->
    <!-- //js -->
</head>
<body>
    <!-- w3ls-weather -->
    <div class="w3ls-weather">
        <h1>Hava Raporu Kartı</h1>
        <div class="w3ls-weather-agileinfo">
            <div class="weather-left">
                <div class="weather-left-text">
                    <h4>Tekirdağ, Türkiye </h4>
                    <h5>@DateTime.Now.ToShortDateString()</h5>
                </div>
                <ul class="report">
                    <li><a href="#">17 °C</a></li>
                    <li><a href="#"><span>17</span> °C</a></li>
                </ul>
            </div>
            <div class="weather-right">
                <ul>
                    <li>
                        <figure class="icons">
                            <canvas id="partly-cloudy-day" width="60" height="60"></canvas>
                        </figure>
                        <h3>18 °C</h3>
                        <div class="clear"></div>
                    </li>
                    <li>
                        <figure class="icons">
                            <canvas id="clear-day" width="40" height="40"></canvas>
                        </figure>
                        <div class="weather-text">
                            <h4>Çarş</h4>
                            <h5>17 °C</h5>
                        </div>
                        <div class="clear"></div>
                    </li>
                    <li>
                        <figure class="icons">
                            <canvas id="partly-cloudy-night" width="40" height="40"></canvas>
                        </figure>
                        <div class="weather-text">
                            <h4>Per</h4>
                            <h5>18 °C</h5>
                        </div>
                        <div class="clear"></div>
                    </li>
                    <li>
                        <figure class="icons">
                            <canvas id="partly-cloudy-day" width="40" height="40"></canvas>
                        </figure>
                        <div class="weather-text">
                            <h4>Cuma</h4>
                            <h5>28 °C</h5>
                        </div>
                        <div class="clear"></div>
                    </li>
                </ul>
                <script>
					 var icons = new Skycons({"color": "#fff"}),
						  list  = [
							"partly-cloudy-day"
						  ],
						  i;

					  for(i = list.length; i--; )
						icons.set(list[i], list[i]);
					  icons.play();
                </script>
                <script>
					 var icons = new Skycons({"color": "#fff"}),
						  list  = [
                              "clear-night", "partly-cloudy-night","partly-cloudy-day", "cloudy", "clear-day", "sleet", "snow", "wind","fog"
						  ],
						  i;

					  for(i = list.length; i--; )
						icons.set(list[i], list[i]);
					  icons.play();
                </script>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <!-- //w3ls-weather -->
    <!-- copyright -->
    <div class="copyw3-agile">
        <p> © 2021 Flatty Weather Report . Tüm Hakları Saklıdır </p>
    </div>
    <!-- //copyright -->
</body>
</html>